@page "/home"
@using Thryft.Models
@using Thryft.Services
@inject UserService userService
@inject ProductService productService


<PageTitle>Home</PageTitle>

<MudContainer>

    <MudAppBar>
        @* <MudIconButton Color="Color.Tertiary" Icon="@Icons.Material.Filled.Menu" Href="">Filter</MudIconButton> *@
        <MudSpacer/> 
        <MudBadge Overlap="true" Color="Color.Secondary" Style="font-size:10px !important;" Content="@cartItemCount"><MudIconButton Href="" Color="Color.Tertiary" Icon="@Icons.Material.Filled.ShoppingCart"></MudIconButton></MudBadge>
        <MudMenu Color="Color.Tertiary" Class="ms-4" Icon="@Icons.Material.Filled.Person">
            <MudMenuItem></MudMenuItem>
            <MudMenuItem></MudMenuItem>
            <MudMenuItem></MudMenuItem>
        </MudMenu>
    </MudAppBar>

    <MudTextField T="string" Placeholder="Search Products..." Variant="Variant.Outlined" Margin="Margin.Dense" Clearable="true" Adornment="Adornment.End" AdornmentIcon="@Icons.Material.Outlined.Search" Immediate="true" />


    <MudGrid>

        @foreach (var product in products)
        {

            <MudItem xs="12" sm="6" md="4" lg="6">

                <MudCard>@product.ProductName</MudCard>

            </MudItem>

        }

    </MudGrid>

    


    @* @if (users == null)
    {
        <p>Loading... Users</p>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Email</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in users)
                {
                    <tr>
                        <td>@user.UserId</td>
                        <td>@user.Name</td>
                        <td>@user.Email</td>
                    </tr>
                }
            </tbody>
        </table>
    } *@
    

</MudContainer>


@code {
    private List<User> users;

    private List<Product> products;

    public int cartItemCount = 2;

    protected override async Task OnInitializedAsync()
    {
        products = await productService.GetProductsAsync();
    }

}